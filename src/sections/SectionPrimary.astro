  <div class="py-8 px-16 flex justify-between items-center">
    <article>
      <a href={URL_BASE + "app/"} class="btn-morado text-3xl"><span class="font-semibold">HAZ CLIC AQUÍ</span> PARA EMPEZAR</a>
    </article>
    <article>
      <img class="w-80" src={URL_BASE + "logo_educando.webp"} alt="Logo educando al futuro">
    </article>
  </div>