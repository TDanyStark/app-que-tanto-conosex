<style is:global>
  #popup{
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.2);
    /* add blur */
    backdrop-filter: blur(5px);
    z-index: 9999;
    padding: 20px;
  }

  .contenedor-popup{
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
  }

  .modal-info{
    position: relative;
    background-color: white;
    border-radius: 10px;
    position: relative;
    width: 100%;
    max-width: 600px;
  }
</style>

<script>
  const modal = document.getElementById('popup');
  const closeModal = () => {
    document.getElementById('popup').classList.add('hidden');
  }
  document.querySelector('.modal-info button').addEventListener('click', () => {
    closeModal();
  });

  document.querySelector('.contenedor-popup').addEventListener('click', (e) => {
    closeModal();

  });

</script>